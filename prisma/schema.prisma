generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource postgres {
  provider = "postgres"
  url      = env("DB_URL")
}

model Character {
  id        Int    @id @default(autoincrement())
  name      String
  avatarSrc String
  prompt    String
  Chats      Chat[]
}

model Chat {
  id          Int       @id @default(autoincrement())
  Character   Character? @relation(fields: [characterId], references: [id])
  characterId Int?
  Messages     Message[]
}

model Message {
  id       Int    @id @default(autoincrement())
  Chat     Chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)
  chatId   Int
  role String
  content  String
}
